{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "lib": [
            "es2024",
            "DOM",
            "WebWorker",
        ],
        "module": "es2020",
        "target": "es2024",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "declarationMap": true,
        "moduleResolution": "node",
        "declaration": true,
        "paths": {
            "@bintoca/*": [
                "./*"
            ]
        },
        "outDir": "../packages"
    },
    "exclude": [
        "./dev/test1/*"
    ]
}